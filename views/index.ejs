<h1>Herbs</h1>
<div class="row row-cols-1 row-cols-md-2 g-4">
    <% herbs.forEach( el => { %>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= el.name %></h5>
                    <p class="card-text"><%= el.latinName %></p>
                    <a href="herbs/view/<%=el._id%>" class="btn btn-primary">View Herb</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>